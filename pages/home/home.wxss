/* pages/home/home.wxss */
.cover{
   text-align: center; 
}

/* 整体背景 */
page{
  background-color: #eee;
}

.title{
  font-size: 50rpx;
  padding: 30px 0;
}

/* 上面表单 */
.input-panel{
  background-color: #fff;
  margin-bottom: 5px;
}
 .input-panel input{
  border-bottom: solid 1px #eee; 
} 

/* 每个item样式 */
.list-item{
  display: flex;
  flex-direction: row;
  background-color: #fff;
  height: 100px;
  text-align: center;
  line-height: 100px; 
  margin-top: 3px;
}
.list-item .item-name{
  flex: 2;
  font-size: 10px;
}
.list-item .item-age{
  flex: 1;
  font-size: 10px;
}
.list-item .item-cover{
  flex: 2;
  padding: 0;
}
.list-item .item-cover image{
  width:100%;
  height: 100%;
}
.list-item .item-delete{
  flex: 2;
}




